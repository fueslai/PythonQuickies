def sum_numbers(n):
     # Base case: the sum of numbers from 1 to 1 is 1
     if n == 1:
         return 1
     # Recursive case: the sum of numbers from 1 to n is equal to n + the sum of numbers from 1 to (n-1)
     else:
         return n + sum_numbers(n-1)

# Usage example
number = 5
result = sum_numbers(number)
print(f"The sum of numbers from 1 to {number} is {result}")
